{
  "include": [
    "../src/pdfactory.ts",
    "../src/types.ts"
  ],
  "exclude": [
    "../node_modules/**/*",
    "../dist/**/*",
    "../build/**/*"
  ],
  "compilerOptions": {
    "rootDir": "../src",
    "outDir": "../dist",

    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "Node",

    "useDefineForClassFields": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true
  }
}